 @model TabelaDeProfissionais.Models.Profissional

<h2>Editar Profissional</h2>

<form method="post">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" id="Nome" name="Nome" value="@Model.Nome" />
    </div>
    <div class="form-group">
        <label for="Especialidade">Especialidade</label>
        <input type="text" class="form-control" id="Especialidade" name="Especialidade" value="@Model.Especialidade" />
    </div>
    <div class="form-group">
        <label for="TipoDocumento">Tipo de Documento</label>
        <input type="text" class="form-control" id="TipoDocumento" name="TipoDocumento" value="@Model.TipoDocumento" />
    </div>
    <div class="form-group">
        <label for="NumeroDocumento">Número de Documento</label>
        <input type="text" class="form-control" id="NumeroDocumento" name="NumeroDocumento" value="@Model.NumeroDocumento" />
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
 